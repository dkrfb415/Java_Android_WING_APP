<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView android:id="@+id/main_logo_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="160dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/logo"
        ></ImageView>

    <TextView android:id="@+id/main_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/main_logo_img"
        android:layout_marginTop="50dp"
        android:textSize="15dp"
        ></TextView>

       <TextView android:id="@+id/person_num"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_centerHorizontal="true"
           android:layout_below="@id/main_name"
           android:layout_marginTop="50dp"
           android:textSize="15dp"
           ></TextView>

       <TextView android:id="@+id/license_num"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_centerHorizontal="true"
           android:layout_below="@id/person_num"
           android:layout_marginTop="50dp"
           android:textSize="15dp"
           ></TextView>

       <TextView android:id="@+id/email_tv"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_centerHorizontal="true"
           android:layout_below="@id/license_num"
           android:layout_marginTop="50dp"
           android:textSize="15dp"
           ></TextView>
   -->
    <Button android:id="@+id/logout_bt"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_below="@id/email_tv"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:text="로그아웃"
        android:textSize="20dp"
        ></Button>
</RelativeLayout>