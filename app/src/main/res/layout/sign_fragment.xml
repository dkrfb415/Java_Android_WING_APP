<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/sign_relative">

        <EditText
            android:id="@+id/sign_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:hint="ID"
            android:scrollbars="vertical"
            android:textSize="20dp"></EditText>

        <EditText android:id="@+id/sign_pwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/sign_id"
        android:layout_marginTop="20dp"
        android:hint="PWD"
        android:gravity="center"
        android:textSize="20dp"
           android:inputType="textPassword"
        ></EditText>

    <EditText android:id="@+id/sign_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/sign_pwd"
        android:layout_marginTop="20dp"
        android:hint="NAME"
        android:gravity="center"
        android:textSize="20dp"
        >
    </EditText>

    <EditText android:id="@+id/sign_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/sign_name"
        android:layout_marginTop="20dp"
        android:hint="EMAIL"
        android:gravity="center"
        android:textSize="20dp"
        ></EditText>

    <EditText android:id="@+id/sign_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/sign_email"
        android:layout_marginTop="20dp"
        android:hint="Phone Number"
        android:gravity="center"
        android:textSize="20dp"
        ></EditText>

    <EditText android:id="@+id/sign_birth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/sign_phone"
        android:layout_marginTop="20dp"
        android:hint="Birth"
        android:gravity="center"
        android:textSize="20dp"
        ></EditText>

    <CheckBox android:id="@+id/sign_chk_male"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/sign_birth"
        android:layout_marginTop="20dp"
        android:text="남성"
        android:textSize="20dp"
        android:layout_marginLeft="80dp"
        android:buttonTint="#5BFFB0"
        ></CheckBox>


    <CheckBox android:id="@+id/sign_chk_female"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/sign_birth"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/sign_chk_male"
        android:text="여성"
        android:textSize="20dp"
        android:layout_marginLeft="90dp"
        android:buttonTint="#5BFFB0"
        ></CheckBox>

        <Button android:id="@+id/sign_join_bt"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/sign_chk_male"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="100dp"
            android:text="가입하기"
            ></Button>

    </RelativeLayout>



</ScrollView>